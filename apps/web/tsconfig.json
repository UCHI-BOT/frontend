{
  "extends": "@repo/typescript-config/vite.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    "vite-env.d.ts",
    "vite.config.ts",
    "postcss.config.cjs"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
